# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Google Gemini API Configuration (REQUIRED)
GEMINI_API_KEY=your_actual_gemini_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=production

# Frontend Configuration (your GCE instance IP or domain)
REACT_APP_API_URL=http://YOUR_GCE_IP:3000

# Redis Configuration
REDIS_URL=redis://redis:6379

# File Upload Configuration
MAX_FILE_SIZE=104857600
MAX_FILES=5
UPLOAD_PATH=/app/uploads

# Rate Limiting (adjust for team size)
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60000

# Session Configuration (REQUIRED - generate a strong secret)
SESSION_SECRET=your_very_strong_random_secret_here_minimum_32_characters

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json
